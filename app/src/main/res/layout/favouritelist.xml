<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1AFFFFFF"
        android:layout_marginBottom="2dp"
        android:orientation="vertical">


    <TextView
            android:id="@+id/tvplace"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:text="Udupi,Karnataka"
            android:textColor="#FFE539"
            android:textSize="15dp">

    </TextView>
    <ImageView
            android:id="@+id/fav_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="320dp"
            android:layout_marginTop="7dp"
            android:contentDescription="TODO"
            app:srcCompat="@drawable/icon_favourite_active" />


    <LinearLayout
            android:layout_width="290dp"
            android:layout_height="45dp"
            android:orientation="horizontal">


        <ImageView
                android:id="@+id/ivSun"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/icon_temperature" />

        <TextView
                android:id="@+id/ittemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:text=" 31 u00B0C"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

        <TextView
                android:id="@+id/itvmostlysunny"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="Mostly Sunny"
                android:textColor="#FFFFFF"
                android:textSize="16sp">

        </TextView>


    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#0DFFFFFF"


            />





</LinearLayout>




